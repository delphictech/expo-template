{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "src": ["./src/*", "./src"],
      "navigation":["./src/navigation/*", "./src/navigation"],
      "screens":["./src/screens/*", "./src/screens"],
      "components/*": ["./src/components/*", "./src/components"],
      "constants/*": ["./src/constants/*", "./src/constants"],
      "features": ["./src/features/*", "./src/features"],
      "utils": ["./src/utils/*", "./src/utils"],
      "firebase-api": ["./src/firebase/api"],
    },
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "extends": "expo/tsconfig.base",
  "include": ["./*.ts", "./src/**/*.tsx", "./src/**/*.ts", "./src/*"],
  "exclude": ["node_modules", "dist", "./*.js"]
}
